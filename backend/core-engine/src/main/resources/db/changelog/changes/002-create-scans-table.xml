<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="002-create-scans-table" author="vtb-team">
        <createTable tableName="scans">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_id" type="uuid">
                <constraints foreignKeyName="fk_scans_project" references="projects(id)"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="specification_url" type="text"/>
            <column name="specification_type" type="varchar(50)"/>
            <column name="specification_content" type="text"/>
            <column name="total_endpoints" type="integer"/>
            <column name="critical_findings" type="integer" defaultValueNumeric="0"/>
            <column name="high_findings" type="integer" defaultValueNumeric="0"/>
            <column name="medium_findings" type="integer" defaultValueNumeric="0"/>
            <column name="low_findings" type="integer" defaultValueNumeric="0"/>
            <column name="info_findings" type="integer" defaultValueNumeric="0"/>
            <column name="duration_ms" type="bigint"/>
            <column name="started_at" type="timestamp"/>
            <column name="completed_at" type="timestamp"/>
            <column name="error_message" type="text"/>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>

