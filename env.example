# API Security Guardian - Environment Variables Template

# Database
DATABASE_URL=postgresql://guardian:guardian_pass@localhost:5432/api_guardian
POSTGRES_DB=api_guardian
POSTGRES_USER=guardian
POSTGRES_PASSWORD=guardian_pass

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Nvidia API Configuration (PRIMARY - уже настроено!)
NVIDIA_API_KEY=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
NVIDIA_MODEL=qwen/qwen3-next-80b-a3b-instruct

# OpenAI Configuration (OPTIONAL - fallback)
OPENAI_API_KEY=
OPENAI_ENABLED=false

# Anthropic Claude Configuration (OPTIONAL - fallback)
ANTHROPIC_API_KEY=
ANTHROPIC_ENABLED=false

# LLM Service Configuration
LLM_ENABLED=true
LLM_PRIMARY_PROVIDER=nvidia  # nvidia (по умолчанию)
LLM_FALLBACK_ENABLED=false   # Nvidia достаточно мощный, fallback не нужен
LLM_CACHE_ENABLED=true
LLM_CACHE_TTL=86400  # 24 hours in seconds
LLM_MIN_CONFIDENCE_THRESHOLD=0.7
LLM_MAX_CONCURRENT_REQUESTS=5
LLM_TIMEOUT_SECONDS=60


# Application Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080
API_BASE_PATH=/api/v1

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_APP_NAME="API Security Guardian"
NEXT_PUBLIC_APP_VERSION=1.0.0

# Security
JWT_SECRET=your-very-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=86400000  # 24 hours in milliseconds
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring & Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_VTB_GUARDIAN=DEBUG
SENTRY_DSN=  # Optional: Sentry error tracking

# Feature Flags
FEATURE_LLM_ANALYSIS=true
FEATURE_DYNAMIC_TESTING=true
FEATURE_FUZZING=true
FEATURE_ASYNCAPI=true
FEATURE_GOST_INTEGRATION=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_SCANS_PER_HOUR=10

# File Upload
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=.json,.yaml,.yml

# Email Configuration (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@api-guardian.vtb.ru

# Docker
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# CI/CD
CI_ENVIRONMENT=development  # development | staging | production

